<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">

        <View
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:textSize="8pt"
            android:gravity="center"
            android:text="车费详情"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="车费"
            android:textColor="@android:color/black"
            android:id="@+id/textView2"
            android:layout_weight="20"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="38"
            android:id="@+id/textViewFee"
            android:layout_weight="60"
            android:gravity="center"
            android:textSize="30pt"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@android:color/black"
            android:id="@+id/textView4"
            android:layout_weight="20"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">

        <View
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:textSize="8pt"
            android:gravity="center"
            android:text="支付方式"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="35"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/alipayicon"
            android:id="@+id/alipayicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alipayicon"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:text="支付宝支付"
            android:id="@+id/textView5" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonAlipay"
            android:checked="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/weichaticon"
            android:id="@+id/weichaticon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/weichaticon"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:text="微信支付"
            android:id="@+id/textView6" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonWechat"
            android:checked="false"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确认支付"
        android:textColor="@android:color/white"
        android:textSize="10pt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/buttonPayConfirm"
        android:background="@drawable/button_blue_background_selector"
        android:onClick="pay" />

</LinearLayout>

