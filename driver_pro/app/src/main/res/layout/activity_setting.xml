<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="设 置"
            android:textColor="@color/black_textview"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <com.gc.materialdesign.views.ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:id="@+id/account_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="个人信息"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/enter_icon" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/sound_setting_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="语音开关"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/togglebutton"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    toggle:offBorderColor="#ddd"
                    toggle:onColor="@color/sky_blue"></com.zcw.togglebutton.ToggleButton>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/apk_update_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:id="@+id/version_update_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="版本更新"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/version_update_textview"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/version_update_textview"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/version_enter_icon"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/enter_icon" />

                <TextView
                    android:id="@+id/touch_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/version_enter_icon"
                    android:text="点击检测更新"
                    android:textColor="#808080"
                    android:textSize="14sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/feedback_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="意见反馈"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/enter_icon" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/cantact_us_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系我们"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/enter_icon" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/legal_items_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="法律条款"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/enter_icon" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/about_us_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="关于嘟嘟"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/enter_icon" />
            </RelativeLayout>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/confirm_button"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="32dp"
                android:background="@color/material_deep_blue"
                android:gravity="center"
                android:text="退出账号"
                android:textSize="6sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.gc.materialdesign.views.ScrollView>

</LinearLayout>