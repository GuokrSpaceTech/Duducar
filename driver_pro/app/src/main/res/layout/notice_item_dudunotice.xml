<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:paddingTop="10dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:id="@+id/itemLLayout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="24dp">

        <ImageView
            android:id="@+id/dudu_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/unknown"
            android:layout_centerVertical="true"/>
        <TextView android:id="@+id/notice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嘟嘟播报"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@id/dudu_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView android:id="@+id/notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-09 16:02"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@id/notice_type"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageButton android:id="@+id/notice_delete_btn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/delete_button_bg"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:background="#00ffffff"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:id="@+id/notice_description_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:text="系统消息: 欢迎您成为一名嘟嘟司机"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:ellipsize="end"/>
    <TextView android:id="@+id/notice_detail_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:visibility="gone"
        />
</LinearLayout>