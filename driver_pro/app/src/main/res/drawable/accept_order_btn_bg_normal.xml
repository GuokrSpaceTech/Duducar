<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/outer_circle_bg">
        <shape android:shape="oval">
            <corners android:radius="50dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="16px"
                android:color="@color/translucent_black" />
        </shape>
    </item>
    <item
        android:id="@+id/inner_circle_bg"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval">
            <corners android:radius="40dp" />
            <solid android:color="@color/holo_red_light" />
        </shape>
    </item>
</layer-list>
